@model Contract_Monthly_Claim_System.Models.Claim

@{
	ViewData["Title"] = "Submit Claim";
}

<h2>@ViewData["Title"]</h2>

<div class="card p-3">
    <form asp-action="Create" method="post">
        <div class="mb-3">
            <label class="form-label">Lecturer Name</label>
            <input asp-for="LecturerName" class="form-control" />
            <span asp-validation-for="LecturerName" class="text-danger"></span>
        </div>

        <div class="mb-3 row">
            <div class="col">
                <label class="form-label">Claim Period (date)</label>
                <input asp-for="ClaimPeriod" type="date" class="form-control" />
            </div>
            <div class="col">
                <label class="form-label">Hours Worked</label>
                <input asp-for="HoursWorked" type="number" step="0.1" class="form-control" />
            </div>
            <div class="col">
                <label class="form-label">Hourly Rate</label>
                <input asp-for="HourlyRate" type="number" step="0.01" class="form-control" />
            </div>
        </div>

        <div class="mb-3">
            <label class="form-label">Notes</label>
            <textarea asp-for="Notes" class="form-control"></textarea>
        </div>

        <button type="submit" class="btn btn-primary btn-lg">Submit Claim</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

